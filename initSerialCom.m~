function out = initSerialCom(portNum)
% INITSERIALCOM Initialize the serial communication with the pump. 
% Return a structure with information to pass around


if 
BaudRate = 9600;
s1 = serial(portNum, 'BaudRate', BaudRate);
% s1.InputBufferSize = 50000;
fopen(s1);

com.port = portNum;
com.mode = 'serial';
com.endchar = '\n';
com.fid = s1;
com.initialized = 1;

% return com struct
out = com;
end